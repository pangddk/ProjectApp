<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    android:weightSum="15"
    android:orientation="vertical"
    tools:context="com.example.projectapp.InformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="14"
        android:orientation="horizontal"
        android:background="#00CC99">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/back"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/txt_infoMain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="ข้อมูล"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btn_Emergency"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/emer_menu"
            android:background="@null"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical"
        android:weightSum="4"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <ImageButton
            android:id="@+id/btn_PersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/personal_info"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_Feeling"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/feeling"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_HealtSugges"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/healt_sugges"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/how_to_use"
            android:background="@null"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>
